
import java.util.Scanner;

public class SumOfASequence {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int sum = 0;
        int value = Integer.valueOf(scanner.nextLine());
        int i = 1;
        while(i<=value){
            sum = sum+i;
            i++;
        }
        System.out.println(sum);
    }

}
